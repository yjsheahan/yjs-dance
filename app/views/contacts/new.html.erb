<%= render "shared/navbar" %>

<div class="contact-container">

  <h4>
    CONTACT
  </h4>

  <p>
    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nobis, maxime distinctio assumenda labore quos sapiente dolorum expedita beatae voluptate odit!
  </p>

  <%= form_for @contact do |f| %>
    <% if flash[:error].present? %>
        <p> flash[:error]</p>
    <% end %>
    <%= f.label :name %> <br>
    <%= f.text_field :name, required: true %>

    <br>
    <%= f.label :email %> <br>
    <%= f.text_field :email, required: true %>

    <br>
    <%= f.label :message %> <br>
    <%= f.text_area :message, as: :text %>


    <%= f.label :nickname, style: "display: none" %> <br>
    <%= f.text_field :nickname, style: "display: none", hint: 'leave this field blank' %>


    <%= f.submit 'SEND', class: "button" %>
  <% end %>

</div>
